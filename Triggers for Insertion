CREATE OR REPLACE TRIGGER trg_insert_aeroplanes
AFTER INSERT ON Aeroplanes
FOR EACH ROW
BEGIN
  DBMS_OUTPUT.PUT_LINE(' Successfully Inserted into Aeroplanes: Aeroplane_ID = ' || :NEW.Aeroplane_ID || '');
END;


